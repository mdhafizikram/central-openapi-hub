{
  "get": {
    "tags": ["UserRole"],
    "summary": "Get peoplesoft user security role memberships.",
    "description": "Returns peoplesoft user security role memberships, by oprid or roleName.",
    "parameters": [
      {
        "name": "oprid",
        "in": "path",
        "required": true,
        "description": "The oprid or role name",
        "schema": {
          "type": "string"
        },
        "example": "1000422805"
      }
    ],
    "responses": {
      "200": {
        "description": "Successful response",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../../schemas/psUserRoleMembership.json"
            }
          }
        }
      },
      "401": {
        "description": "Unauthorized",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "description": "Error message for unauthorized access.",
                  "example": "Unauthorized access. Please authenticate to access this resource."
                }
              }
            }
          }
        }
      },
      "404": {
        "description": "subscription not found",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "description": "Error message for course not found.",
                  "example": "Asu identity not found."
                }
              }
            }
          }
        }
      },

      "500": {
        "description": "Internal server error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "description": "Error message for internal server error.",
                  "example": "Internal server error."
                }
              }
            }
          }
        }
      }
    }
  }
}
