{
  "get": {
    "tags": ["Codeset"],
    "summary": "Get Campus Codes",
    "description": "Retrieve a list of campus codes along with their descriptions and location codes.",

    "responses": {
      "200": {
        "description": "Successful response",
        "content": {
          "application/json": {
            "schema": {
              "type": "array",
              "items": {
                "$ref": "../../schemas/campus.json"
              }
            }
          }
        }
      },
      "404": {
        "description": "Codeset not found",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "description": "Error message for codeset not found.",
                  "example": "Codeset not found."
                }
              }
            }
          }
        }
      },
      "500": {
        "description": "Internal server error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "description": "Error message for internal server error.",
                  "example": "Internal server error."
                }
              }
            }
          }
        }
      }
    }
  }
}
